<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="cornerRadius">@dimen/default_margin</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsScreenTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_screen_item_height</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="drawableTint">@color/yp_text_gray</item>
    </style>
</resources>