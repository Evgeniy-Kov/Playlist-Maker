<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/default_margin</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsScreenTextViewStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="drawableTint">@color/yp_text_gray</item>
    </style>

    <style name="FontYSDisplayMediumSize22Weight500">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="FontYSDisplayRegularSize16Weight400">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
    </style>
</resources>