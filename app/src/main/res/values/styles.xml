<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/default_margin</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/FontYSDisplayMediumSize22Weight500</item>
    </style>

    <style name="SettingsScreenTextViewStyle">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="drawableTint">?attr/settings_activity_ic_tint</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize16Weight400</item>
    </style>

    <style name="ToolbarStyle">
        <item name="titleTextColor">?attr/colorSecondary</item>
        <item name="navigationIconTint">?attr/colorSecondary</item>
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="titleTextAppearance">@style/FontYSDisplayMediumSize22Weight500</item>
    </style>

    <style name="ToolbarWithNavigationStyle">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="titleTextColor">?attr/colorSecondary</item>
        <item name="navigationIconTint">?attr/colorSecondary</item>
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="titleTextAppearance">@style/FontYSDisplayMediumSize22Weight500</item>
    </style>

    <style name="FontYSDisplayBoldSize24Weight700">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="FontYSDisplayMediumSize22Weight500">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="FontYSDisplayMediumSize22Weight400">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="FontYSDisplayMediumSize19Weight400">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="FontYSDisplayMediumSize19Weight500">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="FontYSDisplayRegularSize18Weight400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="FontYSDisplayRegularSize16Weight400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="FontYSDisplayMediumSize14Weight500">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="FontYSDisplayMediumSize14Weight400">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="FontYSDisplayRegularSize13Weight400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="FontYSDisplayRegularSize12Weight400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="FontYSDisplayRegularSize11Weight400">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TrackItemViewSongInfoBottomStringStyle">
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize11Weight400</item>
        <item name="android:textColor">?attr/settings_activity_ic_tint</item>
    </style>

    <style name="SearchActivityPlaceholderStyle">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/FontYSDisplayMediumSize19Weight400</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="SearchActivityMaterialButtonStyle">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/FontYSDisplayMediumSize14Weight500</item>
        <item name="cornerRadius">@dimen/search_activity_update_button_corner_radius</item>
    </style>

    <style name="PlayerActivityTrackDescriptionTitleTextViewStyle">
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize13Weight400</item>
    </style>

    <style name="PlayerActivityTrackDescriptionTextViewStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize13Weight400</item>
    </style>

    <style name="MediaLibraryPlaceholderStyle">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/FontYSDisplayMediumSize19Weight400</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="PlaylistsFragmentMaterialButtonStyle">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/FontYSDisplayMediumSize14Weight500</item>
        <item name="cornerRadius">@dimen/playlists_fragment_new_playlist_button_corner_radius</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabTextColor">?attr/colorSecondary</item>
        <item name="tabTextAppearance">@style/FontYSDisplayMediumSize14Weight500</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="itemTextAppearanceActive">@style/FontYSDisplayRegularSize12Weight400</item>
        <item name="itemTextAppearanceInactive">@style/FontYSDisplayRegularSize12Weight400</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="hintTextColor">@color/yp_blue</item>
        <item name="hintTextAppearance">@style/FontYSDisplayRegularSize12Weight400</item>
    </style>

    <style name="MaterialAlertDialog_Center" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/yp_blue</item>

    </style>

    <style name="PlaylistDescriptionTextStyle">
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize18Weight400</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:background">@color/yp_light_gray</item>
    </style>

    <style name="PlaylistMenuTextStyle">
        <item name="android:textAppearance">@style/FontYSDisplayRegularSize16Weight400</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>